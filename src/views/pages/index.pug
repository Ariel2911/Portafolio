              h3.card__title--technology Git
            li.card.card--technology.section__list--odd
              img.card__img(src="./assets/icons/figma.svg", alt="icono de Figma")
              h3.card__title--technology Figma
          button#btnSeeMore.btn.btn-primary Ver más

      //- sección "Proyectos"
      section#projects.section
        h2.section__title Proyectos
        .section__container

          //- section.card
