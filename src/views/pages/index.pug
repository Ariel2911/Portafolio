      //- sección "Contacto"
      section#contact.section
        h2.section__title Contacto
        .section__container
          form#form.form.card
            input.form__input(
              type="text" 
              name='name'
              title="Solo acepta letras y espacios"
              pattern="^[A-Za-zÑñÝáÉéÝíÓóÚúÜü\s]+$"
              required   
              placeholder="Nombre *"
            ) 
            input.form__input(
              type="email" 
              name='email'
              title='Email incorrecto'
              pattern="^[a-z0-9]+(\.[_a-z0-9]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,15})$"
              required  
              placeholder="Email *"
            )
            textarea.form__area(
              name="comments"              
              rows="10"
              title='Tú mensaje no debe exceder los 255 caracteres'
              data-pattern="^.{1,255}$"
              required
              placeholder="Déjame tú mensaje *"
              )
            button.btn.btn-primary.card__input Enviar mensaje
            article#response.section.form__response.hidden
              .card
                img#loader.form__loader(src="./assets/loader.svg", alt="Enviando...")
                p#message
          section.contact.card
